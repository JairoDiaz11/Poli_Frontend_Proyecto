<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header') %>
    <title>Nuevo Usuario</title>
</head>

<body>

    <div class="container p-4">

      <div class="row">

        <div class="col-md-4 mx-auto">

          <form method="POST" target="/new-entry" class="card bg-dark text-light card-body">

            <div class="mb-3">
              <label for="title">Nombre Usuario</label>
              <input name="title" type="text" class="form-control rounded-0" placeholder="Nombre Usuario" autofocus
                required>
            </div>

            <div class="mb-3">
              <label for="title">Tipo de usuario</label>
              <input name="author" type="text" class="form-control rounded-0" placeholder="Tipo de usuario" autofocus required>
            </div>

            <div class="mb-3">
              <label for="image">Imagen usuario</label>
              <input type="url" name="image" class="form-control" placeholder="http://website.com" required>
            </div>

            <div class="mb-3">
              <label for="description">Description Usuario</label>
              <textarea class="form-control" name="description" rows="2" required></textarea>
            </div>

            <div class="mb-3">
              <input type="submit" value="Crear Usuario" class="btn btn-primary">
            </div>
          </form>
        </div>
      </div>

    </div>

    <%- include('partials/footer')%>
</body>

</html>